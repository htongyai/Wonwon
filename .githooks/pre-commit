#!/bin/bash

# Pre-commit hook for Wonwonw2 project
# This script runs before each commit to ensure code quality

echo "🔍 Running pre-commit checks..."

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo "❌ Not in a git repository"
    exit 1
fi

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(dart)$')

if [ -z "$STAGED_FILES" ]; then
    echo "✅ No Dart files to check"
    exit 0
fi

echo "📁 Checking staged files: $STAGED_FILES"

# Run dart format --set-exit-if-changed
echo "🎨 Checking code formatting..."
if ! dart format --set-exit-if-changed $STAGED_FILES; then
    echo "❌ Code formatting issues found. Please run 'dart format .' to fix them."
    exit 1
fi

# Run dart analyze
echo "🔍 Running static analysis..."
if ! dart analyze $STAGED_FILES; then
    echo "❌ Static analysis issues found. Please fix them before committing."
    exit 1
fi

# Run tests
echo "🧪 Running tests..."
if ! flutter test; then
    echo "❌ Tests failed. Please fix them before committing."
    exit 1
fi

echo "✅ All pre-commit checks passed!"
exit 0
